<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In</h5>
          <form class="form-signin" id="form" action="/signup" method="POST">
            <div class="form-label-group">
              <p>First Name:</p>
              <input type="text" id="firstName" class="form-control" name="firstName" placeholder="First Name" required
                autofocus>
              <label for="firstName"></label>
            </div>

            <div class="form-label-group">
              <p>Last Name:</p>
              <input type="text" id="lastName" class="form-control" name="lastName" placeholder="Last Name" required>
              <label for="lastName"></label>
            </div>

            <div class="form-label-group">
              {{!-- <p>Gender:</p>
              <input type="text" id="username" class="form-control" name="username" placeholder="Username" required>
              <label for="username"></label> --}}
              <label for="gender"> Gender: </label>
              <select name="gender" id="gender">
                <option value="female">Female</option>
                <option value="male">Male</option>
              </select>
            </div>

            <div class="form-label-group">
              <p>Username:</p>
              <input type="text" id="username" class="form-control" name="username" placeholder="Username" required>
              <label for="username"></label>
            </div>


            <div class="form-label-group">
              <p>Email:</p>
              <input type="email" id="email" class="form-control" name="email" placeholder="Email address" required
                autofocus>
              <label for="email"></label>
            </div>

            <div class="form-label-group">
              <p>Password:</p>
              <input type="password" id="password" class="form-control" name="password" placeholder="Password" required>
              <label for="password"></label>
            </div>
            <hr class="my-4">
            {{#if errorMessage}}
            <div class="message">{{ errorMessage }}</div>
            {{/if}}
            <button class="btn btn-lg btn-warning btn-block" type="submit">Be part of the team!!</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>