<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Create a Post</h5>

                    <form class="form-signin" id="form" action="/boards" method="POST">
                        <div class="form-label-group">

                            {{!-- CATEGORY --}}
                            <div class="form-label-group">
                                <label for="category">Category </label>
                                <input type="text" id="category" class="form-control" name="category"
                                    placeholder="Category" required>
                            </div>
                            {{!-- TITLE => URL / LINK --}}
                            <div class="form-label-group">
                                <label for="url">URL / Link </label>
                                <input type="text" id="url" class="form-control" name="url" placeholder="https://"
                                    required>
                            </div>

                            {{!-- DESCRIPTION --}}
                            <div class="form-label-group">
                                <label for="description">Description </label>
                                <input type="text" id="description" class="form-control" name="description"
                                    placeholder="Description" required>
                            </div>


                            <hr class="my-4">
                            {{#if errMessage}}
                            <div class="errMessage">{{ errMessage }}</div>
                            {{/if}}
                            <button class="btn btn-dark btn-lg download-btn" type="button"><a href="/boards">Go to
                                    Boards</a></button>
                            <button class="btn btn-dark btn-lg download-btn">Save Post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>